<LoginScreen>:
    GridLayout:
        cols: 1
        GridLayout:
            cols: 1
            padding: 15, 15
            spacing: 20, 20
            Label:
                text: "User Login"
                font_size: "24sp"
            TextInput:
                id: username
                hint_text: "Username"
            TextInput:
                id: password
                password: True
                hint_text: "Password"
            RelativeLayout:
                Button:
                    size_hint: 0.3, 0.5
                    text: "Login"
                    on_press: root.login(root.ids.username.text, root.ids.password.text)
                    pos_hint: {"center_x": 0.5, "center_y": 0.6}
            Label:
                id: login_wrong
                text: ""
        GridLayout:
            cols: 2
            size_hint: 0.2, 0.2
            padding: 10,10
            spacing: 10,0
            Button:
                text: "Forgot Password"
                background_color: 1,1,1,0
                opacity: 1 if self.state == "normal" else 0.5
                color: 0.1,0.7,1,1
            Button:
                text: "Sign Up"
                on_press: root.sign_up()
                background_color: 1,1,1,0
                opacity: 1 if self.state == "normal" else 0.5
                color: 0.1,0.7,1,1

<SignUpScreen>:
    GridLayout:
        cols: 1
        padding: 20,20
        spacing: 20,20
        Label:
            text: "Sign up your username & password"
        TextInput:
            id: username
            hint_text: "Username"
        TextInput:
            id: password
            password: True
            hint_text: "Password"           
        Button:
            text: "Submit"
            on_press: root.add_user(root.ids.username.text, root.ids.password.text)

<SignUpScreenSuccess>:
    GridLayout:
        cols: 1
        Label:
            text: "Sign up successfully!"
        Button:
            text: "Login Page"
            on_press: root.go_to_login()
        
<LoginScreenSuccess>:
    GridLayout:
        cols: 1
        padding: 20,20
        spacing: 20,20
        RelativeLayout:
            ImageButton:
                pos_hint: {"center_x": 0.93, "center_y": 0.8}
                size_hint: 0.35, 0.35
                source: "logout_hover.png" if self.hovered else "logout_nothover.png"
                on_press: root.log_out()
        Label:
            text: "How do you feel?"
        TextInput:
            id: feeling
            hint_text: "Things to try: sad, happy, unloved.."
        Button:
            text: "Enlighten me"
            on_press: root.get_quote(root.ids.feeling.text)
        ScrollView:
            Label:
                id: quotes
                text: ""
                text_size: self.width, None
                size_hint_y: None
                height: self.texture_size[1]
<RootWidget>:
    LoginScreen:
        name: "login_screen"
    SignUpScreen:
        name: "sign_up_screen"
    SignUpScreenSuccess:
        name: "sign_up_screen_success"
    LoginScreenSuccess:
        name: "login_screen_success"